---
const {
  imageSrc,
  imageAlt = "",
  eyebrow = "",
  title = "",
  description = "",
} = Astro.props;
---

<section class="w-full">
  <div class="grid min-h-[420px] grid-cols-1 md:grid-cols-2">
    <!-- Izquierda: imagen -->
    <div class="relative overflow-hidden">
      <img
        src={imageSrc}
        alt={imageAlt}
        class="h-full w-full object-cover"
        loading="eager"
      />
    </div>

    <!-- Derecha: bloque texto -->
    <div class="flex items-center bg-rose-50">
      <div class="w-full px-6 py-10 md:px-12 md:py-12">
        {eyebrow && (
          <p class="text-sm tracking-wide text-neutral-600">
            {eyebrow}
          </p>
        )}

        <h1 class="mt-3 text-4xl font-semibold tracking-tight text-neutral-900 md:text-5xl">
          {title}
        </h1>

        {description && (
          <p class="mt-5 max-w-xl text-base leading-relaxed text-neutral-700">
            {description}
          </p>
        )}
      </div>
    </div>
  </div>
</section>
